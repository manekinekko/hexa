{
  "name": "@manekinekko/hexa",
  "version": "1.3.4",
  "description": "Hexa: The ultimate companion for the Azure CLI. Setup and deploy in seconds.",
  "main": "./dist/bin.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "hexa": "./dist/bin.js"
  },
  "homepage": "https://github.com/manekinekko/hexa#readme",
  "private": false,
  "scripts": {
    "start": "npm run build -- --watch",
    "build": "rm -fr build/ && mkdir build && npm run copy:templates && npm run copy:bin && tsc",
    "copy:templates": "cp -r src/templates dist",
    "copy:bin": "cp src/bin.js dist",
    "prepare": "npm run build",
    "release": "release-it --no-git.requireUpstream",
    "test": "jest"
  },
  "keywords": [
    "azure",
    "cloud",
    "serverless",
    "hosting",
    "database",
    "authentication",
    "storage"
  ],
  "author": {
    "name": "Wassim Chegham",
    "email": "github@wassim.dev"
  },
  "bugs": {
    "url": "https://github.com/manekinekko/hexa/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/manekinekko/hexa.git"
  },
  "license": "MIT",
  "dependencies": {
    "@types/shelljs": "^0.8.8",
    "cfonts": "^2.4.5",
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "commander": "^3.0.1",
    "configstore": "^5.0.0",
    "debug": "^4.1.1",
    "deepmerge": "^4.0.0",
    "dotenv": "^8.1.0",
    "inquirer": "^7.0.0",
    "ora": "^3.4.0",
    "shelljs": "^0.8.3",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.0.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@release-it/conventional-changelog": "^2.0.1",
    "@types/clear": "^0.1.0",
    "@types/configstore": "^4.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^26.0.15",
    "@types/mock-fs": "^4.13.0",
    "@types/node": "^12.7.3",
    "@types/ora": "^3.2.0",
    "husky": "^3.0.7",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "mock-fs": "^4.13.0",
    "nodemon": "^2.0.7",
    "release-it": "^14.7.0",
    "ts-jest": "^26.4.4",
    "typescript": "beta"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
